<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.sentomero.sufeeds.javasufeeds.Controllers.ProfileContoller">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Profile" />

    <GridPane hgap="10" vgap="10">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Student Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="studentNumberLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Course:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="courseLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="yearLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</VBox>
