<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sentomero.sufeeds.javasufeeds.Controllers.HomeFeed">

    <!-- Main Layout -->
    <left>
        <!-- Collapsible Sidebar -->
        <VBox fx:id="leftSidebar" styleClass="left-sidebar" spacing="10.0">
            <HBox alignment="CENTER" styleClass="sidebar-header">
                <Label fx:id="sidebarTitle" text="Hello!" styleClass="sidebar-title"/>
            </HBox>

            <VBox spacing="10" styleClass="nav-buttons-container">
                <Button fx:id="homeButton" styleClass="nav-button" onAction="#handleHomeButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-home" styleClass="nav-icon"/>
                            <Label text="Home" styleClass="nav-text"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="profileButton" styleClass="nav-button" onAction="#handleProfileButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-user" styleClass="nav-icon"/>
                            <Label text="Profile" styleClass="nav-text"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="usersButton" styleClass="nav-button">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-users" styleClass="nav-icon"/>
                            <Label text="Users" styleClass="nav-text"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="addCommentButton" styleClass="nav-button">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-comment" styleClass="nav-icon"/>
                            <Label text="Add Comment" styleClass="nav-text"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="logoutButton" styleClass="nav-button">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-sign-out-alt" styleClass="nav-icon"/>
                            <Label text="Logout" styleClass="nav-text"/>
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox fx:id="feedContainer" styleClass="feed-container" spacing="10.0">
            <!-- Post Creation Area -->
            <VBox fx:id="postCreationArea" styleClass="post-creation-area" spacing="10.0">
                <TextArea fx:id="postInput" promptText="What's on your mind?" styleClass="post-input"/>
                <Button fx:id="postButton" text="Post" styleClass="post-button" onAction="#handlePostButton"/>
            </VBox>

            <!-- Feed ScrollPane -->
            <ScrollPane fx:id="feedScroll" fitToWidth="true" styleClass="feed-scroll">
                <VBox fx:id="postsContainer" styleClass="posts-container"/>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>