<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainContainer"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sentomero.sufeeds.javasufeeds.Controllers.HomeFeed"
            stylesheets="@HomeFeedstyles.css">

    <!-- Left Sidebar -->
    <left>
        <VBox fx:id="leftSidebar" styleClass="left-sidebar">
            <!-- Profile Section -->
            <VBox styleClass="profile-section" spacing="10">
                <Label fx:id="welcomeLabel" text="Welcome!" styleClass="welcome-text"/>
                <Separator/>
            </VBox>

            <!-- Navigation Buttons -->
            <VBox styleClass="nav-buttons" spacing="8">
                <!-- Home Button -->
                <Button fx:id="homeButton" styleClass="nav-button" onAction="#handleHomeButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-home"/>
                            <Label text="Home"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Profile Button -->
                <Button fx:id="profileButton" styleClass="nav-button" onAction="#handleProfileButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-user"/>
                            <Label text="Profile"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Users Button -->
                <Button fx:id="usersButton" styleClass="nav-button" onAction="#handleUsersButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-users"/>
                            <Label text="Users"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Add Comment Button -->
                <Button fx:id="addCommentButton" styleClass="nav-button" onAction="#handleAddCommentButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-comment"/>
                            <Label text="Add Comment"/>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS"/>

                <!-- Logout Button -->
                <Button fx:id="logoutButton" styleClass="nav-button" onAction="#handleLogoutButton">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <FontIcon iconLiteral="fas-sign-out-alt"/>
                            <Label text="Logout"/>
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox fx:id="feedContainer" styleClass="feed-container">
            <!-- Post Creation Area -->
            <VBox styleClass="post-creation-area">
                <VBox spacing="10">
                    <TextArea fx:id="postInput"
                              promptText="What's on your mind?"
                              styleClass="post-input"
                              wrapText="true"/>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <ComboBox fx:id="classTagSelect"
                                  styleClass="class-tag-select"
                                  promptText="Select class"/>
                        <Button fx:id="postButton"
                                text="Post"
                                styleClass="post-button"
                                onAction="#handlePostButton"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Feed Area -->
            <ScrollPane fx:id="feedScroll"
                        styleClass="feed-scroll"
                        fitToWidth="true"
                        VBox.vgrow="ALWAYS">
                <VBox fx:id="postsContainer"
                      styleClass="posts-container"/>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Padding for the entire BorderPane -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

</BorderPane>