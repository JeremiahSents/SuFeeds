<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sentomero.sufeeds.javasufeeds.Controllers.HomeFeed">

    <!-- Main Layout with Sidebar and Feed Area -->
    <HBox fx:id="mainLayout" spacing="20.0">
        <BorderPane.margin>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </BorderPane.margin>

        <!-- Left Sidebar with Navigation Options -->
        <VBox fx:id="sidebar" alignment="TOP_CENTER" styleClass="left-sidebar" spacing="10.0">
            <HBox.margin>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </HBox.margin>
            <Label fx:id="profileIcon" text="Profile" styleClass="nav-button" />
            <Button fx:id="homeButton" text="Home" styleClass="nav-button" />
            <Button fx:id="usersButton" text="Users" styleClass="nav-button" />
            <Button fx:id="addCommentButton" text="Add Comment" styleClass="nav-button" />
            <Button fx:id="logoutButton" text="Logout" styleClass="nav-button" />
        </VBox>

        <!-- Feed Container -->
        <VBox fx:id="feedContainer" styleClass="feed-container" spacing="10.0">
            <!-- Post Creation Area for Adding New Posts -->
            <VBox fx:id="postCreationArea" styleClass="post-creation-area" spacing="10.0">
                <VBox.margin>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </VBox.margin>
                <TextArea fx:id="postInput" promptText="What's on your mind?" styleClass="post-input" />
                <Button fx:id="postButton" text="Post" styleClass="post-button" />
            </VBox>

            <!-- Scroll Pane for Viewing Feed Posts -->
            <ScrollPane fx:id="feedScroll" fitToWidth="true" styleClass="feed-scroll">
                <VBox fx:id="postsContainer" styleClass="posts-container" spacing="10.0">
                    <!-- Posts will be dynamically added here by the controller -->
                </VBox>
            </ScrollPane>
        </VBox>
    </HBox>
</BorderPane>